doctype html(lang='en')
head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title Admin Dashboard
		link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
		link(href='/assets/css/dashboard.css', rel='stylesheet')
body
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') Laniakea
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='#') Reports
					li
						a(href='#') Accounts
					li
						a(href='#') Uploads
					li
						a(href='/logout') Logout
	.container-fluid
		.row
			.col-sm-3.col-md-2.sidebar
				ul.nav.nav-sidebar
					li.active
						a(href='#')
							| Accounts
							span.sr-only (current)
					li
						a(href='#') Reports
					li
						a(href='#') Uploads
			.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
				h1.page-header Accounts
				.table-responsive
					table.table.table-striped
						thead
							tr
								th Custom ID
								th Email
								th Phone
						tbody
							if(accounts)
								each account in accounts
									tr
										td #{account.customid._}
										td #{account.email._}
										td #{account.phone._}
				h3.sub-header Add an account
				.row.placeholders
					form.form-horizontal(action="/addAccount", method="POST")
						fieldset
							.form-group
								label.col-md-1.control-label(for='password') Password
								.col-md-1
									input#password.form-control.input-md(name='password', type='text', placeholder='********')
								label.col-md-1.control-label(for='email') Email
								.col-md-3
									input#email.form-control.input-md(name='email', type='text', placeholder='useremail@email.com')
							.form-group
								label.col-md-2.control-label(for='customid') Custom ID (Username)
								.col-md-2
									input#customid.form-control.input-md(name='customid', type='text', placeholder='')
								label.col-md-1.control-label(for='phone') Phone #
								.col-md-2
									input#phone.form-control.input-md(name='phone', type='text', placeholder='01234555666')
								.col-md-4
									button#submit.btn.btn-primary(name='submit', type="submit") Create

	script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
	script(src='/assets/js/bootstrap.min.js')
