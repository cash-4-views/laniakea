doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title Admin Dashboard
		link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
		link(href='/assets/css/dashboard.css', rel='stylesheet')
		link(href='/assets/css/table.css', rel='stylesheet')
	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') Laniakea
				#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav.navbar-right
						li
							a(href='/admin/reports') Reports
						li
							a(href='/admin') Accounts
						li
							a(href='/admin/uploads') Uploads
						li
							a(href='/logout') Logout
		.container-fluid
			.row
				.col-sm-2.col-md-1.sidebar
					ul.nav.nav-sidebar
						li
							a(href='#') Accounts
						li.active
							a(href='#')
								| Reports
								span.sr-only (current)
						li
							a(href='#') Uploads
				.col-sm-10.col-sm-offset-2.col-md-11.col-md-offset-1.main
					h1.page-header Reports
					h3.sub-header Select a report
					.row.placeholders
						form.form-horizontal(action="/api/v1/accounts", method="GET")
							fieldset
								.form-group
									label.col-md-2.control-label(for='YYYY_MM') Report
									.col-md-3
										select#YYYY_MM.form-control.input-md(name='YYYY_MM')
											if reportlist
												each YYYY_MM, key in reportlist
													option(value=YYYY_MM) #{YYYY_MM}
											else
												option hi
									.col-md-1
										button#submit.btn.btn-primary(name='submit', type="submit") Select
					h3.sub-header Approve a report
					.row.placeholders
						form.form-horizontal(action="/api/v1/accounts", method="GET")
							fieldset
								.form-group
									label.col-md-2.control-label(for='customid') Custom ID
									.col-md-3
										select#customid.form-control.input-md(name='customid')
											if approvedlist
												each id in approvedlist
													option(value=id) #{id}
											else
												option hi
									.col-md-1
										button#submit.btn.btn-primary(name='submit', type="submit") Approve
					h3.sub-header View Reports
					#content
		script(src='/assets/js/main.js')
