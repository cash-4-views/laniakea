doctype html(lang='en')
head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Laniakea - Login
    link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
    link(href='/assets/css/signin.css', rel='stylesheet')
  body
    .container
      form.form-signin(action="/login", method="POST")
        h2.form-signin-heading Please sign in
        label.sr-only(for='inputEmail') Email
        input#inputEmail.form-control(type='email', placeholder='email', name="email", required='', autofocus='')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', placeholder='*******', name="password", required='')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
