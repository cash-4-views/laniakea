doctype html(lang='en')
head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title Admin Dashboard
		link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
		link(href='/assets/css/dashboard.css', rel='stylesheet')
body
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') Laniakea
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/admin/reports') Reports
					li
						a(href='/admin') Accounts
					li
						a(href='/admin/uploads') Uploads
					li
						a(href='/logout') Logout
	.container-fluid
		.row
			.col-sm-2.col-md-1.sidebar
				ul.nav.nav-sidebar
					li
						a(href='#') Accounts
					li.active
						a(href='#')
							| Reports
						span.sr-only (current)
					li
						a(href='#') Uploads
			.col-sm-10.col-sm-offset-2.col-md-11.col-md-offset-1.main
				h1.page-header Reports
				if(report)
					.table-responsive
						table.table.table-striped
							thead
								tr
									each prop, key in report[0]
										th #{key}
							tbody
								each row in report
									tr
										each prop in row
											td #{prop}
				else
					h1 No reports to show!
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
	script(src='/assets/js/bootstrap.min.js')
