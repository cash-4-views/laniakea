doctype html(lang='en')
head
		meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title Laniakea - Login
		link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
		link(href='/assets/css/signin.css', rel='stylesheet')
	body
		.container
			if alert
				.alert.alert-danger.alert-dismissible.col-md-4.col-md-offset-4(role='alert')
					strong #{(alert === "missing") ? "Missing email or password" : (alert === "email") ? "No account found with that email" : "Incorrect Password"}
			form.form-signin(action="/login", method="POST")
				h2.form-signin-heading Sign In
				label.sr-only(for='inputEmail') Email
				input#inputEmail.form-control(type='email', placeholder='Email', name="email", required='', autofocus='')
				label.sr-only(for='inputPassword') Password
				input#inputPassword.form-control(type='password', placeholder='Password', name="password", required='')
				button.btn.btn-lg.btn-primary.btn-block.glyphicon.glyphicon-user(type='submit')
